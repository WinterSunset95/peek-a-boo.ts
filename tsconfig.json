{
	"compilerOptions": {
		"outDir": "dist",
		"rootDir": "src",
		"declaration" : true,
		"moduleResolution": "Node",
		"esModuleInterop": true,
		"allowImportingTsExtensions": false,
		"emitDeclarationOnly": false,
		"target": "ESNext",
		"module": "ESNext",
		"paths": {
			"$src/*": ["./src/*"]
		}
	},
	"include": ["src"]
}
